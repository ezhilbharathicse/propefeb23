create table department(
deptno int primary key,
deptname varchar(20) unique,
floor number(2),
location varchar(20)
);

desc department

create table employee(
employeeno int primary key,
managerid number(3),
firstname varchar(20),
lasttname varchar(20),
userid varchar(20),
deptno number(2),
salary number(5,2),
commission number(3),
joiningdate date,
designation varchar(25),
constraint fk_05 foreign key (deptno) references department (deptno) on delete cascade);
desc employee


alter table employee add pf number(5,2) check (pf<5000)
alter table employee add hra number(5,2)

create table customer(
customerno int primary key,
custname varchar(20),
address varchar(40)
);
desc customer

create table order1(
orderno number(3) primary key,
customerno number(3),
orderdate date,
constraint fk_06 foreign key (customerno) references customer (customerno) on delete cascade);


desc order1

create table orderitem(
itemid number(3) primary key,
orderno number(3),
itemname varchar(20),
quantity number(2)
constraint fk_06 foreign key (orderno) references customer (orderno) on delete cascade);

